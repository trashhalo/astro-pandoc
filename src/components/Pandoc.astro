---
import { Command } from "astro-command";
import { fileURLToPath } from "node:url";
import path from "node:path";

const cwd = path.join(fileURLToPath(import.meta.url), '../');
const defaultTemplate = path.join(cwd, "template.html");

const {caller, file, extraArgs = [], template = defaultTemplate} = Astro.props;
const args = ["--self-contained", "-t html", `--template="${template}"`].concat(extraArgs).concat([file]);
---
<Command caller={caller} command="pandoc" sendProps={false} args={args} />